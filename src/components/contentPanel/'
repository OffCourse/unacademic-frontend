import React from 'react';
import R from 'ramda';
import _ from 'lodash';
import marked from 'marked';

import Actions from '../../actions/index.js';

let renderer = new marked.Renderer();

class WaypointSection extends React.Component {

  switchMode(){
    Actions.switchMode('curate');
  }

  contentChanged(field, event){
    console.log(field + ': ' + event.target.value);
  }

  render() {
    let { mode, model, level } = this.props;
    let { title, image, curator, description, summary, checkpoints } = model;
    let isEditing = mode === 'curate';
    let isSidebarModel = level === 'waypoints';
    let rendereredDescription = {__html: marked(description, { renderer })};

    return (
      <section onDoubleClick={ isSidebarModel && this.switchMode.bind(this) } className="panel-content_main">
        <hgroup>
          { isEditing ? <textarea value={ title }
                          onChange={ this.contentChanged.bind(this, 'title') }
                          className="title editable"/>
                      : <h1 className="title editable">{ title }</h1> }
        </hgroup>
        <section className="meta">
          <p>Curator: { curator }</p>
          <p>Checkpoints: { checkpoints.length }</p>
        </section>
        <section>
          <h1>Summary</h1>
          <p className="editable">{ summary }</p>
        </section>
        <section>
          <h1>Description</h1>
          <div className="editable" dangerouslySetInnerHTML={ rendereredDescription }></div>
        </section>
      </section>
    )
  }
};

WaypointSection.propTypes = {
  model: React.PropTypes.object,
  mode: React.PropTypes.string
}

export default WaypointSection;
